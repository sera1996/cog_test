<%= form_with(url: user_create_answer_path(@user.id,result: true),model: answer,local: true) do |form| %>
  <% if answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p id ="question">を選んでください</p>
  <%= image_tag '/assets/gray.png', :size => "150x150",id:"picture1" %>
  <%= image_tag '/assets/gray.png', :size => "150x150", id:"picture2" %>
  <p id="lcount">0</p>
  <p id ="rcount">0</p>
  <p id = "rnd">rnd</p>
  <p id = "result">result</p>
  <p id = "submit">submit</p>


  <script>
    var cards = ["A","B","C","D","E","F"];
    var lcount = 0;
    var rcount = 0;
    var stepCnt = 0;
    var options = [];
    var selected = 0;
    var answer;
    var rndOpt;
    var othrOpt;
    $("#submit").click(function(){
      $("#result").closest("form").submit();
    })
    function returnRndIdx(){
      rndOpt = Math.floor(Math.random()*2);
      if(rndOpt == 0){
        othrOpt = 1;
      }
      else if(rndOpt == 1){
        othrOpt = 0;
      }
      $("#rnd").text(`${rndOpt}`+`${othrOpt}`);
    }
    $(document).ready(function(){
      LoadPic(stepCnt);
      answer = cards[Math.floor(Math.random()*4)+2];
      $("#question").text(`${answer}を選んでください`);
    })

    $("#picture1").click(function(){
      lcount++;
      renderPicL();
      $("#lcount").text(lcount);
      $("#rcount").text(rcount);
    })

    $("#picture2").click(function(){
      rcount++;
      renderPicR();
      $("#rcount").text(rcount);
      $("#lcount").text(lcount);
    })

    function LoadPic($stepCnt){
      returnRndIdx();
      if($stepCnt == 0){
        options[rndOpt] = cards[0];
        options[othrOpt] = cards[1];
      }
      else if($stepCnt == 1){
        if(selected == "A"){
          options[rndOpt] = cards[2];
          options[othrOpt] = cards[3];
        }
        else if(selected == "B"){
          options[rndOpt] = cards[4];
          options[othrOpt] = cards[5];
        }
      }
    }
    function checkEnd($selected){
      if(stepCnt == 2){
        if($selected == answer){
          $("#result").text("correct");
        }
        else{
          $("#result").text("wrong");
        }
      }
    }
    function renderPicL(){
      if(lcount == 1){
        $("#picture1").attr("src",`/assets/${options[0]}.png`)
      }
      else if(lcount == 2){
        $("#picture1").attr("src","/assets/white.png")
      }
      else{
        if(rcount > 1){
          selected = options[0];
          stepCnt++;
          checkEnd(selected);
          LoadPic(stepCnt);
          lcount = 0;
          rcount = 0;
          renderGray();
        }
      }
    }
    function renderPicR(){
      if(rcount == 1){
        $("#picture2").attr("src",`/assets/${options[1]}.png`)
      }
      else if(rcount == 2){
        $("#picture2").attr("src","/assets/white.png")
      }
      else{
        if(lcount > 1){
          selected = options[1];
          stepCnt++;
          checkEnd(selected);
          LoadPic(stepCnt);
          lcount = 0;
          rcount = 0;
          renderGray();
        }
      }
    }
    function renderGray(){
      $("#picture1").attr("src","/assets/gray.png");
      $("#picture2").attr("src","/assets/gray.png");

    }
  </script>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
