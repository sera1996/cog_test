<p id="notice"><%= notice %></p>

<h1>回答者一覧</h1>

<table>
  <thead>
    <tr>
      <th>名字</th>
      <th>名前</th>
      <th>学年</th>
      <th>性別</th>
      <th>テスト方式</th>
      <th>学籍番号</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.grade %></td>
        <td><%= user.gender %></td>
        <td>
        <% unless user.student_id.nil? %>
          <% if user.student_id.to_i % 3==0 %>
            A
          <% elsif user.student_id.to_i % 3 == 1 %>
            B
          <% elsif user.student_id.to_i % 3 == 2 %>
            C
          <% end %>
        <% else %>
          nil
        <% end %>
        </td>
        <td><%= user.student_id %></td>
        <td><%= link_to '回答一覧', user_answer_path(user.id) %></td>
        <td><%= link_to 'ユーザー情報編集', edit_user_path(user) %></td>
        <td><%= link_to '回答', user_new_answer_path(id:user.id,ansnum:1) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

